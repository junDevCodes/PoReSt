---
import '../styles/global.css';

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle ? `${pageTitle} | JunYeong Lee` : "JunYeong Lee | Embedded Vision Engineer"}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body>
    <div class="layout-wrapper">
      <header class="main-header">
        <div class="container header-content">
          <a href="/" class="site-title">JunYeong Lee</a>
          <nav class="site-nav">
            <a href="/#competencies">Competencies</a>
            <a href="/#projects">Projects</a>
            <a href="/hub">Hub</a>
          </nav>
        </div>
      </header>
      
      <main class="container">
        <slot />
      </main>

      <footer class="main-footer container">
        <p>© 2026 JunYeong Lee. Documentation-first portfolio.</p>
        <div class="footer-links">
          <a href="mailto:contact@example.com">Email</a>
          <span class="separator">•</span>
          <a href="https://github.com/jundevcodes" target="_blank">GitHub</a>
          <span class="separator">•</span>
          <a href="https://linkedin.com" target="_blank">LinkedIn</a>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  .layout-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-header {
    padding: 2rem 0;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--c-border);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-family: var(--font-mono);
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--c-navy);
    border: none;
  }

  .site-nav {
    display: flex;
    gap: 1.5rem;
  }

  .site-nav a {
    font-size: 0.95rem;
    color: var(--c-ink-light);
    border: none;
  }
  .site-nav a:hover {
    color: var(--c-navy);
    text-decoration: underline;
  }

  .main-footer {
    margin-top: auto;
    padding-top: 3rem;
    padding-bottom: 3rem;
    color: var(--c-ink-light);
    font-size: 0.85rem;
    border-top: 1px solid var(--c-border);
    display: flex;
    justify-content: space-between;
  }

  .footer-links {
    display: flex;
    gap: 0.5rem;
  }
  .separator { color: var(--c-border); }

  @media (max-width: 600px) {
    .main-footer { flex-direction: column; gap: 1rem; }
    .header-content { flex-direction: column; align-items: flex-start; gap: 1rem; }
  }
</style>
